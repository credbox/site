@model IList<Web.CredBox.Model.Entity.TipoEntity>
@{
    Layout = null;
}

@if (Model != null)
{
 <table class="table table-striped">
        <thead>
            <tr>
                <th>
                    Nome
                </th>
                <th>
                    Data Inclusão
                </th>
                <th>
                    Usuário Inclusão
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.nome</td>
                    <td class="center">@item.dataInclusao.ToString("dd/MM/yyyy")</td>
                    <td class="center">@item.UsuarioInclusao.nome</td>
                    <td class="center">
                        <a class="btn btn-success" href="@Url.Action("Edit", "Tipo", new { id = @Web.CredBox.StringExtension.Encrypt(@item.id.ToString()) })">
                            <i class="icon-edit icon-white"></i>
                            Editar
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <script>

        $(document).ready(function () {
            $('#divBusca').show();
            $('#alertMessage').hide();
        });
    </script>
}
else
{
    <script>

        $(document).ready(function () {
            $('#divBusca').hide();
            $('#alertMessage').show('show');
            $('#message').html('<li>Nenhum tipo encontrado.</li>');
        });
    </script>

}
