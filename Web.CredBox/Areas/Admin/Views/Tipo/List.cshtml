@{
    ViewBag.Title = "List";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutPage.cshtml";
}
<script>
    $(document).ready(function () {
        $('#btnNovo').click(function () {
            window.location.href = '@Url.Action("Add","Tipo")';
        });

        $('#btnBuscar').click(function () {
            loadSearchTipo();
        });
        $('#alertMessage').hide();
    });

    function loadSearchTipo() {
        $('#pleaseWaitDialog').show();

        $.ajax({
            type: "POST",
            url: '@Url.Action("GetAll", "Tipo")',
            data: GetValue(),
            error: function () {
                $('#alertMessage').show('show');
                $('#message').html('<li>Não foi possível processar sua solicitação. Tente novamente mais tarde.</li>');
                $('#pleaseWaitDialog').hide();
            },
            success: function (data) {
                if (data == null) {
                    $('#alertMessage').show('show');
                    $('#message').html('<li>Este serviço está temporariamente indisponível. Tente novamente mais tarde.</li>');
                    $('#pleaseWaitDialog').hide();
                }
                else {
                    $("#divResult").html(data);
                    $('#pleaseWaitDialog').hide();
                }
            }
        });

    }

    function GetValue() {
        var nome = $('#txtNome').val();

        return { nome: nome };
    }
</script>
<h2>List</h2>
<fieldset>
    <div class="control-group">
        <label class="control-label" for="name">Nome</label>
        <div class="controls">
            <input type="text" id="txtNome" placeholder="Nome" />
        </div>
    </div>
    <div class="form-actions">
        <button type="button" id="btnBuscar" class="btn-primary btn-small">Buscar</button>
        <button type="button" id="btnNovo" class=" btn-primary btn-small">Novo</button>
    </div>

    <div id="divResult" class="control-group">

    </div>

    <div class="modal hide" id="pleaseWaitDialog" data-backdrop="static" data-keyboard="false">
        <div class="modal-header">
            <h1>Processando...</h1>
        </div>
        <div class="modal-body">
            <div class="progress progress-striped active">
                <div class="bar" style="width: 100%;"></div>
            </div>
        </div>
    </div>

    <div class="alert alert-success" id="alertMessage">
        <h4>Atenção</h4>
        <ul id="message"></ul>
    </div>


</fieldset>

