@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutPage.cshtml";
}
<script>
    $(document).ready(function () {
        $('#btnEdit').click(function () {
            var idCategoria = $('#btnEdit').attr("categoria");
            Edit(idCategoria);
        });

        $('#btnVoltar').click(function () {
            window.location.href = '@Url.Action("List","Categoria")';
        });

        $('#alertMessage').hide('show');

    });


    function Edit(idCategoria) {
        $('#pleaseWaitDialog').show();
        var erroMessage = GetValidation();

        if (erroMessage == '') {
            $.ajax({
                type: "GET",
                data: GetValue(idCategoria),
                url: '@Url.Action("Update", "Categoria")',
                error: function (data) {
                    $('#alertMessage').show('show');
                    $('#message').html('<li>Não foi possível processar sua solicitação. Tente novamente mais tarde.</li>');
                    $('#pleaseWaitDialog').hide();
                },
                success: function (data) {
                    $('#alertMessage').show('show');
                    $('#message').html('<li>' + data + '</li>');
                    $('#pleaseWaitDialog').hide();
                }
            });
        }
        else {
            $('#alertMessage').show('show');
            $('#message').html(erroMessage);
            $('#pleaseWaitDialog').hide();
        }
    }

    function GetValidation() {
        var erroMessage = '';
        if ($('#txtNome').val() == '') {
            erroMessage = '<li>O campo nome é obrigatório.</li>';
        }

        return erroMessage;

    }

    function GetValue(idCategoria) {
        var nome = $('#txtNome').val();
        return { idCategoria: idCategoria, nome: nome };
    }
</script>
<h2>Edit</h2>
<fieldset>
    <div class="control-group">
        <label class="control-label" for="name">Nome</label>
        <div class="controls">
            <input type="text" id="txtNome" value="@ViewBag.Categoria.nome" />
        </div>
    </div>
    <div class="form-actions">
        <button type="button" id="btnEdit" categoria="@ViewBag.Categoria.id" class=" btn-primary btn-small">Salvar</button>
        <button type="button" id="btnVoltar" class=" btn-primary btn-small">Voltar</button>


    </div>
    <div class="modal hide" id="pleaseWaitDialog" data-backdrop="static" data-keyboard="false">
        <div class="modal-header">
            <h1>Processando...</h1>
        </div>
        <div class="modal-body">
            <div class="progress progress-striped active">
                <div class="bar" style="width: 100%;"></div>
            </div>
        </div>
    </div>
    <div class="alert alert-success" id="alertMessage">
        <h4>Atenção</h4>
        <ul id="message"></ul>
    </div>
</fieldset>
