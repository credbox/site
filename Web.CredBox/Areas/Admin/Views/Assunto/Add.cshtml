@{
    ViewBag.Title = "Credbox";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutPage.cshtml";
}
<script>
    $(document).ready(function () {
        $('#btnAdd').click(function () {
            Add();
        });
        $('#btnVoltar').click(function () {
            window.location.href = '@Url.Action("List","Assunto")';
        });
        $('#alertMessage').hide('show');

    });


    function Add() {
        $('#pleaseWaitDialog').modal('show');
        var erroMessagem = GetValidation();
        if (erroMessagem == '') {
            $.ajax({
                type: "GET",
                data: GetValue(),
                url: '@Url.Action("Save", "Assunto")',
                error: function (data) {
                    $('#alertMessage').show('show');
                    $('#message').html('<li>Não foi possível processar sua solicitação. Tente novamente mais tarde.</li>');
                    $('#pleaseWaitDialog').modal('hide');
                },
                success: function (data) {
                    $('#alertMessage').show('show');
                    $('#message').html('<li>' + data + '</li>');
                    $('#pleaseWaitDialog').modal('hide');
                }
            });
        }
        else {
            $('#alertMessage').show('show');
            $('#message').html(erroMessagem);
            $('#pleaseWaitDialog').modal('hide');
        }
    }

    function GetValidation() {
        var erroMessage = '';
        if ($('#txtNome').val() == '') {
            erroMessage = 'O campo nome é obrigatório.';
        }
        return erroMessage;
    }

    function GetValue() {
        var nome = $('#txtNome').val();
        return { nome: nome };
    }


</script>
<h2>Assunto</h2>

<div class="box span10">
    <div class="box-header well" data-original-title="">
        <h2><i class="icon-edit"></i> Novo</h2>
        <div class="box-icon">
            @*<a href="#" class="btn btn-setting btn-round"><i class="icon-cog"></i></a>*@
            @*<a href="#" class="btn btn-minimize btn-round"><i class="icon-chevron-up"></i></a>*@
            @*<a href="#" class="btn btn-close btn-round"><i class="icon-remove"></i></a>*@
        </div>
    </div>
    <div class="box-content">
        <form class="form-horizontal">
            <fieldset>
                <div class="control-group">
                    <label class="control-label" for="txtNome">Nome</label>
                    <div class="controls">
                        <input class="input-xlarge focused" id="txtNome" placeholder="Nome" type="text">
                    </div>
                </div>

                <div class="form-actions">

                    <button type="button" class="btn btn-primary" id="btnAdd"><i class="icon icon-white icon-save"></i> Salvar</button>
                    <button type="button" class="btn" id="btnVoltar"><i class="icon icon-undo"></i> Voltar</button>
                </div>

                <div class="modal fade" id="pleaseWaitDialog">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                                <h4 class="modal-title">Processando...</h4>
                            </div>
                            <div class="modal-body">
                                <div class="progress progress-striped">
                                    <div class="progress-bar" style="width: 100%"></div>
                                </div>
                            </div>
                        </div><!-- /.modal-content -->
                    </div><!-- /.modal-dialog -->
                </div><!-- /.modal -->

                <div class="alert alert-error" id="alertMessage">
                    <button type="button" class="close" data-dismiss="alert">×</button>
                    <h4>Atenção</h4>
                    <ul id="message"></ul>
                </div>
            </fieldset>
        </form>

    </div>
</div>