@model IList<Web.CredBox.Model.Entity.ImobiliariaEntity>
@{
    Layout = null;
    string idEstado = string.Empty;
    string idCidade = string.Empty;
    string nome = string.Empty;
    string status = string.Empty;

    if (!string.IsNullOrEmpty(Request.Form["nome"]))
    {
        nome = Request.Form["nome"].ToString();
    }

    if (Request.Form["idEstado"] != "0")
    {
        idEstado = Request.Form["idEstado"].ToString();
    }

    if (Request.Form["idCidade"] != "0")
    {
        idCidade = Request.Form["idCidade"].ToString();
    }

    status = Request.Form["status"].ToString();
}

@if (Model != null)
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>
                    Nome
                </th>
                <th>
                    Estado
                </th>
                <th>
                    Cidade
                </th>
                <th>
                    Contato
                </th>

                <th>
                    Ativo
                </th>
                <th>
                    Inclusão
                </th>
                <th>
                    Usuário Inclusão
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.nome</td>
                    <td class="center">@item.Estado.sigla</td>
                    <td class="center">@item.Cidade.nome</td>
                    <td class="center">@item.contato</td>
                    @if (@item.ativo)
                    {
                        <td class="center"><span class="label label-success">@Web.CredBox.Util.ConvertValue.BoolToString(@item.ativo)</span> </td>
                    }
                    else
                    {
                        <td class="center"><span class="label">@Web.CredBox.Util.ConvertValue.BoolToString(@item.ativo)</span> </td>
                    }

                    <td class="center">@item.dataInclusao.ToString("dd/MM/yyyy")</td>
                    <td class="center">@item.UsuarioInclusao.nome</td>
                    <td class="center">
                        <a class="btn btn-success" href="@Url.Action("Edit", "Imobiliaria", new { id = @Web.CredBox.StringExtension.Encrypt(@item.id.ToString()) })">
                            <i class="icon-edit icon-white"></i>
                            Editar
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <script>

        $(document).ready(function () {
            $('#divBusca').show();
            $('#alertMessage').hide();
        });
    </script>
}
else
{
    <script>

        $(document).ready(function () {
            $('#divBusca').hide();
            $('#alertMessage').show('show');
            $('#message').html('<li>Nenhuma imobiliária encontrada.</li>');
        });
    </script>

}
