@{
    ViewBag.Title = "List";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutPage.cshtml";
}

<script>
    $(document).ready(function () {

        $('#alertMessage').hide('show');
        $('#ddlCidade').append('<option value="">Selecione</option>');

        $('#ddlEstado').change(function () {
            var idEstado = $('#ddlEstado').val();
            ZerarCidade();
            LoadCidade(idEstado);
        });

        $('#btnNovo').click(function () {
            document.location.href = '@Url.Action("Add","Imobiliaria")';
        });

        $('#btnBuscar').click(function () {
            loadSearchImobiliaria();
        });

    });

    function LoadCidade(idEstado) {
        $('#pleaseWaitDialog').show();
        $.ajax({
            type: "GET",
            data: GetValueEstado(),
            url: '@Url.Action("GetCidades", "Imobiliaria")',
            error: function (data) {
                $('#alertMessage').show('show');
                $('#message').html('<li>Não foi possível processar sua solicitação. Tente novamente mais tarde.</li>');
                $('#pleaseWaitDialog').hide();
            },
            success: function (data) {
                ZerarCidade();
                $('#ddlCidade').append('<option value="0">Selecione</option>');
                $.each(data, function (i, cidade) {
                    $('#ddlCidade').append('<option value="' + cidade.id + '">' + cidade.nome + '</option>');
                });
                $('#pleaseWaitDialog').hide();
            }
        });
    }


    function loadSearchImobiliaria() {
        $('#pleaseWaitDialog').show();

        $.ajax({
            type: "POST",
            url: '@Url.Action("GetAll", "Imobiliaria")',
            data: GetValueSearch(),
            error: function () {
                $('#alertMessage').show('show');
                $('#message').html('<li>Não foi possível processar sua solicitação. Tente novamente mais tarde.</li>');
                $('#pleaseWaitDialog').hide();
            },
            success: function (data) {
                if (data == null) {
                    $('#alertMessage').show('show');
                    $('#message').html('<li>Este serviço está temporariamente indisponível. Tente novamente mais tarde.</li>');
                    $('#pleaseWaitDialog').hide();
                }
                else {
                    $("#divResult").html(data);
                    $('#pleaseWaitDialog').hide();
                }
            }
        });

    }


    function ZerarCidade() {
        $("#ddlCidade").empty();
    }

    function GetValueEstado() {
        var idEstado = $('#ddlEstado').val();
        return { idEstado: idEstado };
    }

    function GetValueSearch() {
        var idEstado = $('#ddlEstado').val();
        var idCidade = 0;
        if ($('#ddlCidade').val() != '')
            idCidade = $('#ddlCidade').val();

        var nome = $('#txtNome').val();
        var status = $('#chkAtivo').is(':checked');
        return { idEstado: idEstado, idCidade: idCidade, nome: nome, status: status };
    }
</script>

<h2>List</h2>
<fieldset>

    <div class="control-group">

        <div class="controls-row">
            <label for="ddlEstado">Estado</label>
            @Html.DropDownList("ddlEstado", new SelectList((System.Collections.IEnumerable)ViewData["Estados"], "Value", "Text"))
        </div>
        <div class="controls-row">
            <label for="ddlCidade">Cidade</label>
            <select id="ddlCidade" name="ddlCidade"></select>
        </div>


        <div class="controls-row">
            <label for="txtNome">nome</label>

            <input type="text" placeholder="Nome" id="txtNome" />
        </div>
        <div class="controls-row">
            <label for="chkAtivo">Ativo</label>

            <input type="checkbox" class="checkbox" id="chkAtivo" />
        </div>
    </div>


    <div class="form-actions">
        <button type="button" id="btnBuscar" class="btn-primary">Buscar</button>
        <button type="button" id="btnNovo" class="btn-primary">Novo</button>
    </div>
    <div class="celarfix"></div>

    <hr />


    <div class="control-group" id="divResult">


    </div>

    <div class="modal hide" id="pleaseWaitDialog" data-backdrop="static" data-keyboard="false">
        <div class="modal-header">
            <h1>Processando...</h1>
        </div>
        <div class="modal-body">
            <div class="progress progress-striped active">
                <div class=" bar " style="width: 100%;"></div>
            </div>
        </div>
    </div>

    <div class="alert alert-success" id="alertMessage">
        <h4>Atenção</h4>
        <ul id="message"></ul>
    </div>
</fieldset>