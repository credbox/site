@{
    ViewBag.Title = "Credbox";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutPage.cshtml";
}

<script>
    $(document).ready(function () {

        $('#alertMessage').hide('show');
        $('#ddlEstado').append('<option selected="selected" value="0">Selecione</option>');
        $('#ddlCidade').append('<option value="0">Selecione</option>');

        $('#breadcrumb').html('<a href="@Url.Action("Home","Home")">Home</a><li><span class="divider">/</span><a href="@Url.Action("List","Imobiliaria")">Imobiliária</a></li><li><span class="divider">/</span> Buscar</li>');

        $('#ddlEstado').change(function () {
            var idEstado = $('#ddlEstado').val();
            ZerarCidade();
            LoadCidade(idEstado);
        });

        $('#btnNovo').click(function () {
            document.location.href = '@Url.Action("Add","Imobiliaria")';
        });

        $('#btnBuscar').click(function () {
            loadSearchImobiliaria();
        });

        $('#alertMessage').hide();
        $('#divBusca').hide('show');

    });

    function LoadCidade(idEstado) {
        $('#pleaseWaitDialog').modal('show');
        if (idEstado > 0) {
            $.ajax({
                type: "GET",
                data: GetValueEstado(),
                url: '@Url.Action("GetCidades", "Imobiliaria")',
                error: function (data) {
                    $('#alertMessage').show('show');
                    $('#message').html('<li>Não foi possível processar sua solicitação. Tente novamente mais tarde.</li>');
                    $('#pleaseWaitDialog').modal('hide');
                },
                success: function (data) {
                    ZerarCidade();
                    $('#ddlCidade').append('<option value="0">Selecione</option>');
                    $.each(data, function (i, cidade) {
                        $('#ddlCidade').append('<option value="' + cidade.id + '">' + cidade.nome + '</option>');
                    });
                    $('#pleaseWaitDialog').modal('hide');
                }
            });
        }
        else {
            ZerarCidade();
            $('#ddlCidade').append('<option value="0">Selecione</option>');
            $('#pleaseWaitDialog').modal('hide');
        }
    }


    function loadSearchImobiliaria() {
        $('#pleaseWaitDialog').modal('show');


        $.ajax({
            type: "POST",
            url: '@Url.Action("GetAll", "Imobiliaria")',
            data: GetValueSearch(),
            error: function () {
                $('#alertMessage').show('show');
                $('#message').html('<li>Não foi possível processar sua solicitação. Tente novamente mais tarde.</li>');
                $('#pleaseWaitDialog').modal('hide');
            },
            success: function (data) {
                if (data == null) {
                    $('#alertMessage').show();
                    $('#message').html('<li>Este serviço está temporariamente indisponível. Tente novamente mais tarde.</li>');
                    $('#pleaseWaitDialog').modal('hide');
                }
                else {
                    $('#divBusca').show();
                    $("#divResult").html(data);
                    $('#pleaseWaitDialog').modal('hide');
                }
            }
        });

    }


    function ZerarCidade() {
        $("#ddlCidade").empty();
    }

    function GetValueEstado() {
        var idEstado = $('#ddlEstado').val();
        return { idEstado: idEstado };
    }

    function GetValueSearch() {
        var idEstado = $('#ddlEstado').val();
        var idCidade = 0;
        if ($('#ddlCidade').val() != '')
            idCidade = $('#ddlCidade').val();

        var nome = $('#txtNome').val();
        var status = $('#chkAtivo').is(':checked');
        return { idEstado: idEstado, idCidade: idCidade, nome: nome, status: status };
    }
</script>

<h2>Imobiliária</h2>

<div class="box span10">
    <div class="box-header well" data-original-title="">
        <h2><i class="icon-edit"></i> Buscar</h2>
        <div class="box-icon">
            @*<a href="#" class="btn btn-setting btn-round"><i class="icon-cog"></i></a>*@
            @*<a href="#" class="btn btn-minimize btn-round"><i class="icon-chevron-up"></i></a>*@
            @*<a href="#" class="btn btn-close btn-round"><i class="icon-remove"></i></a>*@
        </div>
    </div>
    <div class="box-content">
        <form class="form-horizontal">
            <fieldset>
                <div class="control-group">
                    <label class="control-label" for="ddlEstado">Estado</label>
                    <div class="controls">
                        <select class="input-xlarge" id="ddlEstado">
                            @foreach (var item in @ViewBag.Estados)
                            {
                                <option value="@item.id">@item.nome</option>
                            }
                        </select>

                    </div>
                </div>

                <div class="control-group">
                    <label class="control-label" for="ddlCidade">Cidade</label>
                    <div class="controls">
                        <select class="input-xlarge" id="ddlCidade" name="ddlCidade"></select>

                    </div>
                </div>

                <div class="control-group">
                    <label class="control-label" for="txtNome">Nome</label>
                    <div class="controls">
                        <input class="input-xlarge" id="txtNome" placeholder="Nome" type="text">
                    </div>
                </div>

                <div class="control-group">
                    <label class="control-label" for="chkAtivo">Ativo</label>
                    <div class="controls">
                        <input type="checkbox" class="checkbox" id="chkAtivo" />
                    </div>
                </div>

                <div class="form-actions">

                    <button type="button" class="btn btn-primary" id="btnBuscar"><i class="icon icon-white icon-search"></i> Buscar</button>
                    <button type="button" class="btn" id="btnNovo"><i class="icon icon-page"></i> Novo</button>

                </div>

                <div class="row-fluid sortable" id="divBusca">
                    <div class="box span12">
                        <div class="box-header well" data-original-title>
                            <h2>Resultado </h2>
                            <div class="box-icon">
                                <a href="#" class="btn btn-minimize btn-round"><i class="icon-chevron-up"></i></a>
                            </div>
                        </div>
                        <div class="box-content" id="divResult">
                        </div>
                    </div><!--/span-->
                </div><!--/row-->

                <div class="modal fade" id="pleaseWaitDialog">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                                <h4 class="modal-title">Processando...</h4>
                            </div>
                            <div class="modal-body">
                                <div class="progress progress-striped">
                                    <div class="progress-bar" style="width: 100%"></div>
                                </div>
                            </div>
                        </div><!-- /.modal-content -->
                    </div><!-- /.modal-dialog -->
                </div><!-- /.modal -->

                <div class="alert alert-error" id="alertMessage">
                    <button type="button" class="close" data-dismiss="alert">×</button>
                    <h4>Atenção</h4>
                    <ul id="message"></ul>
                </div>
            </fieldset>
        </form>

    </div>
</div>