@{
    ViewBag.Title = "Add";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutPage.cshtml";
}
<script>
    $(document).ready(function () {
        $('#btnAdd').click(function () {
            Add();
        });

        $('#btnVoltar').click(function () {
            window.location.href = '@Url.Action("List","Imobiliaria")';
        });

        $("#txtContatoTelefone").mask("(99) 9999-9999?9");
        $("#txtContatoCelular").mask("(99) 9999-9999?9");
        $('#txtCep').mask("99999-999");

        $('#txtContatoEmail').blur(function () {
            var email = $("#txtContatoEmail").val();
            if (email != "") {
                var filtro = /^([\w-]+(?:\.[\w-]+)*)@@((?:[\w-]+\.)*\w[\w-]{0,66})\.([a-z]{2,6}(?:\.[a-z]{2})?)$/i;
                if (filtro.test(email) == false) {
                    $('#alertMessage').show('show');
                    $('#message').html('<li>Este endereço de email não é válido.</li>');
                }
            }
        });

        $("#txtNumero").keydown(function (event) {
            if (event.keyCode == 46 || event.keyCode == 8 || event.keyCode == 9 || event.keyCode == 27 || event.keyCode == 13 ||
                    (event.keyCode == 65 && event.ctrlKey === true) ||
                    (event.keyCode == 67 && event.ctrlKey === true) ||
                    (event.keyCode == 88 && event.ctrlKey === true) ||
                    (event.keyCode == 86 && event.ctrlKey === true) ||
                    (event.keyCode == 65 && event.metaKey === true) ||
                    (event.keyCode == 67 && event.metaKey === true) ||
                    (event.keyCode == 88 && event.metaKey === true) ||
                    (event.keyCode == 86 && event.metaKey === true) ||
                    (event.keyCode >= 35 && event.keyCode <= 39)) {
                return;
            }
            else {
                if (event.shiftKey || (event.keyCode < 48 || event.keyCode > 57) && (event.keyCode < 96 || event.keyCode > 105)) {
                    event.preventDefault();
                }
            }
        });




        $('#alertMessage').hide('show');
        $('#ddlCidade').append('<option value="0">Selecione</option>');

        $('#ddlEstado').change(function () {
            var idEstado = $('#ddlEstado').val();
            ZerarCidade();
            LoadCidade(idEstado);
        });

    });

    function LoadCidade(idEstado) {
        $('#pleaseWaitDialog').show();
        $.ajax({
            type: "GET",
            data: GetValueEstado(),
            url: '@Url.Action("GetCidades", "Imobiliaria")',
            error: function (data) {
                $('#alertMessage').show('show');
                $('#message').html('<li>Não foi possível processar sua solicitação. Tente novamente mais tarde.</li>');
                $('#pleaseWaitDialog').hide();
            },
            success: function (data) {
                ZerarCidade();
                $('#ddlCidade').append('<option value="">Selecione</option>');
                $.each(data, function (i, cidade) {
                    $('#ddlCidade').append('<option value="' + cidade.id + '">' + cidade.nome + '</option>');
                });
                $('#pleaseWaitDialog').hide();
            }
        });
    }


    function Add() {
        $('#pleaseWaitDialog').show();
        var erroMessage = GetValidation();
        if (erroMessage == '') {
            $.ajax({
                type: "GET",
                data: GetValue(),
                url: '@Url.Action("Save", "Imobiliaria")',
                error: function (data) {
                    $('#alertMessage').show('show');
                    $('#message').html('<li>Não foi possível processar sua solicitação. Tente novamente mais tarde.</li>');
                    $('#pleaseWaitDialog').hide();
                },
                success: function (data) {
                    $('#alertMessage').show('show');
                    $('#message').html('<li>' + data + '</li>');
                    clearControl();
                    $('#pleaseWaitDialog').hide();
                }
            });
        }
        else {
            $('#alertMessage').show('show');
            $('#message').html(erroMessage);
            $('#pleaseWaitDialog').hide();
        }
    }

    function ZerarCidade() {
        $("#ddlCidade").empty();
    }

    function GetValueEstado() {
        var idEstado = $('#ddlEstado').val();
        return { idEstado: idEstado };
    }

    function GetValidation() {
        var erroMessage = '';
        if ($('#ddlEstado').val() == '0') {
            erroMessage = '<li>O campo estado é obrigatório.</li>';
        }

        if ($('#ddlCidade').val() == '0') {
            if (erroMessage != "") {
                erroMessage = erroMessage + '<li>O campo cidade é obrigatório.</li>';
            }
            else {
                erroMessage = '<li>O campo cidade é obrigatório.</li>';
            }
        }

        if ($('#txtNome').val() == '') {
            if (erroMessage != "") {
                erroMessage = erroMessage + '<li>O campo nome é obrigatório.</li>';
            }
            else {
                erroMessage = '<li>O campo nome é obrigatório.</li>';
            }
        }

        var email = $("#txtContatoEmail").val();
        if (email != "") {
            var filtro = /^([\w-]+(?:\.[\w-]+)*)@@((?:[\w-]+\.)*\w[\w-]{0,66})\.([a-z]{2,6}(?:\.[a-z]{2})?)$/i;
            if (filtro.test(email) == false) {
                if (erroMessage != "") {
                    erroMessage = erroMessage + '<li>Este endereço de email não é válido.</li>';
                }
                else {
                    erroMessage = '<li>Este endereço de email não é válido.</li>';
                }
            }
        }
        return erroMessage;
    }

    function GetValue() {
        var idEstado = $('#ddlEstado').val();
        var idCidade = $('#ddlCidade').val();
        var nome = $('#txtNome').val();
        var endereco = $('#txtEndereco').val();
        var cep = $('#txtCep').val();
        var numero = $('#txtNumero').val();
        var bairro = $('#txtBairro').val();
        var contato = $('#txtContato').val();
        var telefoneContato = $('#txtContatoTelefone').val();
        var celularContato = $('#txtContatoCelular').val();
        var emailContato = $('#txtContatoEmail').val();
        var complemento = $('#txtComplemento').val();
        var ativo = $('#chkAtivo').is(':checked');
        return { idEstado: idEstado, idCidade: idCidade, nome: nome, endereco: endereco, cep: cep, numero: numero, bairro: bairro, contato: contato, telefoneContato: telefoneContato, celularContato: celularContato, emailContato: emailContato, emailContato: emailContato };
    }

    function clearControl() {
        $('#ddlEstado').val('0');
        $('#ddlCidade').val('0');
        $('#txtNome').val('');
        $('#txtEndereco').val('');
        $('#txtCep').val('');
        $('#txtNumero').val('');
        $('#txtBairro').val('');
        $('#txtContato').val('');
        $('#txtContatoTelefone').val('');
        $('#txtContatoCelular').val('');
        $('#txtContatoEmail').val('');
        $('#txtComplemento').val('');
        $('#chkAtivo').attr('checked', false);
    }
</script>

<h2>Add</h2>

<fieldset>

    <div class="control-group">
        <label class="control-label" for="ddlEstado">Estado</label>
        <div class="controls">
            @Html.DropDownList("ddlEstado", new SelectList((System.Collections.IEnumerable)ViewData["Estados"], "Value", "Text"))
        </div>
    </div>
    <div class="control-group">
        <label class="control-label" for="ddlCidade">Cidade</label>
        <div class="controls">
            <select id="ddlCidade" name="ddlCidade"></select>
        </div>
    </div>
    <div class="control-group">
        <label class="control-label" for="txtNome">Nome</label>
        <div class="controls">
            <input type="text" id="txtNome" placeholder="Nome" />
        </div>
    </div>
    <div class="control-group">
        <label class="control-label" for="txtEndereco">Endereço</label>
        <div class="controls">
            <input type="text" id="txtEndereco" placeholder="Endereço" />
        </div>
    </div>
    <div class="control-group">
        <label class="control-label" for="txtCep">Cep</label>
        <div class="controls">
            <input type="text" id="txtCep" placeholder="Cep" />
        </div>
    </div>
    <div class="control-group">
        <label class="control-label" for="txtNumero">Número</label>
        <div class="controls">
            <input type="text" id="txtNumero" placeholder="Número" />
        </div>
    </div>
    <div class="control-group">
        <label class="control-label" for="txtBairro">Bairro</label>
        <div class="controls">
            <input type="text" id="txtBairro" placeholder="Bairro" />
        </div>
    </div>
    <div class="control-group">
        <label class="control-label" for="txtComplemento">Complemento</label>
        <div class="controls">
            <input type="text" id="txtComplemento" placeholder="Complemento" />
        </div>
    </div>
    <div class="control-group">
        <label class="control-label" for="txtContato">Contato</label>
        <div class="controls">
            <input type="text" id="txtContato" placeholder="Contato" />
        </div>
    </div>
    <div class="control-group">
        <label class="control-label" for="txtContatoTelefone">Telefone</label>
        <div class="controls">
            <input type="text" id="txtContatoTelefone" placeholder="Telefone" />
        </div>
    </div>
    <div class="control-group">
        <label class="control-label" for="txtContatoCelular">Celular</label>
        <div class="controls">
            <input type="text" id="txtContatoCelular" placeholder="Celular" />
        </div>
    </div>
    <div class="control-group">
        <label class="control-label" for="txtContatoEmail">E-mail</label>
        <div class="controls">
            <input type="text" id="txtContatoEmail" placeholder="E-mail" />
        </div>
    </div>

    <div class="control-group">
        <label class="control-label" for="chkAtivo">Ativo</label>
        <div class="controls">
            <input type="checkbox" id="chkAtivo" />
        </div>
    </div>

    <h2>Contatos</h2>
    <hr />

    <div class="form-actions">
        <button type="button" id="btnAdd" class="btn-primary btn-small">Salvar</button>
        <button type="button" id="btnVoltar" class="btn-primary btn-small">Voltar</button>

    </div>
    <div class="modal hide" id="pleaseWaitDialog" data-backdrop="static" data-keyboard="false">
        <div class="modal-header">
            <h1>Processando...</h1>
        </div>
        <div class="modal-body">
            <div class="progress progress-striped active">
                <div class=" bar " style="width: 100%;"></div>
            </div>
        </div>
    </div>
    <div class="alert alert-success" id="alertMessage">
        <h4>Atenção</h4>
        <ul id="message"> </ul>
    </div>
</fieldset>
